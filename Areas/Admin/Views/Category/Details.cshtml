@model shopdongho.Models.Category

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

    <div>
        
        <h4>Chi Tiết Của Loại Sản Phẩm</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Tên loại sản phẩm
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt>
                Từ Khóa SEO
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Metakey)
            </dd>

            <dt>
                Mô tả:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Metadese)
            </dd>

            <dt>
                Thời gian tạo:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Create_at)
            </dd>

            <dt>
                Thời gian sửa:
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Update_at)
            </dd>

            <dt>
                Trạng thái:
            </dt>
            <dd>
                @if (ViewBag.stt == 1)
                {
                    <h6>Xuất bản</h6>
                }
                else
                {
                    <h6>Chưa xuất bản</h6>
                }
            </dd>
        </dl>
    </div>