@model shopdongho.Models.Topic

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class=" card">
        <div clas="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-uppercase text-danger">Thêm loại bài viết</strong>
                </div>
                <div class="col-md-6 text-end">
                    <a href="@Url.Action("Index", "Topics")" class="btn btn-success">Quay về danh sách</a>
                    <button tyle="submit" class="btn btn-sm btn-success">
                        <i class="fa-solid fa-download"></i> Lưu
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        <label>Tên loại bài viết</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Từ khóa của loại bài viết</label>
                        @Html.EditorFor(model => model.Metakey, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Metakey, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Mô tả loại bài viết</label>
                        @Html.TextAreaFor(model => model.Metadese, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Metadese, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Trạng thái</label>
                        @Html.DropDownListFor(model => model.Status, new[] {
                        new SelectListItem { Text="Chưa xuất bản", Value="2" },
                        new SelectListItem { Text="Xuất bản", Value="1" } })
                        @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>
    </div>
 }